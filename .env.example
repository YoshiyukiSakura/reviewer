# ===========================================
# Environment Variables Configuration
# Copy this file to .env and fill in your values
# ===========================================

# -------------------------------------------
# Application Settings
# -------------------------------------------
NODE_ENV=development
APP_URL=http://localhost:3000
APP_PORT=3000

# -------------------------------------------
# Database Configuration
# -------------------------------------------
# PostgreSQL connection string
DATABASE_URL=postgresql://username:password@localhost:5432/reviewer_db

# -------------------------------------------
# Authentication / JWT
# -------------------------------------------
# JWT secret key (generate a strong random string for production)
JWT_SECRET=
JWT_EXPIRES_IN=7d

# NextAuth.js settings (if using NextAuth)
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=

# -------------------------------------------
# GitHub Integration
# -------------------------------------------
# GitHub OAuth (for login)
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# GitHub Personal Access Token (for API calls)
GITHUB_TOKEN=

# -------------------------------------------
# GitHub Webhook Configuration
# -------------------------------------------
# Webhook secret for signature verification
# Generate with: openssl rand -hex 32
GITHUB_WEBHOOK_SECRET=

# Webhook endpoint path (default: /api/webhook/github)
# WEBHOOK_PATH=/api/webhook/github

# Comma-separated list of allowed event types (leave empty for all)
# WEBHOOK_ALLOWED_EVENTS=pull_request,pull_request_review

# Whether to process webhooks asynchronously (default: true)
# WEBHOOK_PROCESS_ASYNC=true

# Whether to automatically process PR reviews (default: true)
# WEBHOOK_AUTO_PROCESS=true

# -------------------------------------------
# Optional: External Services
# -------------------------------------------
# Redis (if using for caching/sessions)
# REDIS_URL=redis://localhost:6379

# Email service (if needed)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=
# SMTP_PASSWORD=

# -------------------------------------------
# Optional: Logging & Monitoring
# -------------------------------------------
# LOG_LEVEL=debug
