# ===========================================
# Environment Variables Configuration
# Copy this file to .env and fill in your values
# ===========================================

# -------------------------------------------
# Application Settings
# -------------------------------------------
NODE_ENV=development
APP_URL=http://localhost:3000
APP_PORT=3000

# -------------------------------------------
# Database Configuration
# -------------------------------------------
# PostgreSQL connection string
DATABASE_URL=postgresql://username:password@localhost:5432/reviewer_db

# -------------------------------------------
# Authentication / JWT
# -------------------------------------------
# JWT secret key (generate a strong random string for production)
JWT_SECRET=
JWT_EXPIRES_IN=7d

# NextAuth.js settings (if using NextAuth)
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=

# -------------------------------------------
# GitHub Integration
# -------------------------------------------
# GitHub OAuth (for login)
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# GitHub Personal Access Token (for API calls)
# Required for PR operations, reviews, and monitoring
GITHUB_TOKEN=

# GitHub API URL (optional, for GitHub Enterprise)
# Defaults to https://api.github.com
# GITHUB_API_URL=https://github.example.com/api/v3

# -------------------------------------------
# GitHub PR Monitor
# -------------------------------------------
# Comma-separated list of repositories to monitor (format: owner/repo)
# PR_MONITOR_REPOSITORIES=owner1/repo1,owner2/repo2

# Poll interval in milliseconds (default: 60000)
# PR_MONITOR_POLL_INTERVAL_MS=60000

# -------------------------------------------
# AI Provider Configuration
# -------------------------------------------
# AI Provider (openai, anthropic, azure)
# AI_PROVIDER=openai

# AI Model (e.g., gpt-4o, claude-3-5-sonnet)
# AI_MODEL=gpt-4o

# API Keys for AI providers (choose based on AI_PROVIDER)
# OPENAI_API_KEY=
# ANTHROPIC_API_KEY=
# AZURE_OPENAI_API_KEY=

# Optional AI settings
# AI_BASE_URL=                          # Custom base URL for API calls
# AI_MAX_TOKENS=                        # Max tokens for AI response
# AI_TEMPERATURE=0.7                    # Temperature for AI responses (0-1)
# AI_TIMEOUT=120000                     # Timeout in milliseconds

# -------------------------------------------
# Optional: External Services
# -------------------------------------------
# Redis (if using for caching/sessions)
# REDIS_URL=redis://localhost:6379

# Email service (if needed)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=
# SMTP_PASSWORD=

# -------------------------------------------
# Optional: Logging & Monitoring
# -------------------------------------------
# LOG_LEVEL=debug
